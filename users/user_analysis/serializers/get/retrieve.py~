from rest_framework import serializers
from users.models.analysis import UserAnalysis
from analysis.analysis.serializers.get.get import AnalysisGetSerializer


class UserAnalysisGetSerializer(serializers.ModelSerializer):
    analysis = AnalysisGetSerializer()  # Nest AnalysisSerializer

    class Meta:
        model = UserAnalysis
        fields = ['id', 'user', 'analysis', 'status', 'expected_result', 'result', 'paid']
